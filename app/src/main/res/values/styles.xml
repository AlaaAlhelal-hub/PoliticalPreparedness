<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/cantarell</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cantarell</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>


    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/cantarell</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>


    <style name="TextAppearance.ExtraSmall" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextAppearance.Highlighting" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextAppearance.Heading" parent="TextAppearance.Medium">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
